<!--
	This shows how to integrate VNC Viewer / Player in a Flex interface.
-->

<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="vertical"
	xmlns:wiz="wiz.viewer.*" backgroundAlpha="0">
	
	<wiz:VNCViewer  width="100%" height="100%"
		viewerMode="true"
		debug="false"
		host="{parameters.host ? parameters.host : -1}"
		port="{parameters.port ? parameters.port : 5900}"
		securityPort="{parameters.securityPort ? parameters.securityPort : -1}"/>
</mx:Application>
